.page
  display flex
  flex-direction column
  align-items center
  justify-content space-between
  flex-grow 1
  overflow auto

.page-title
  text(xl)
  font-weight 600
  margin-bottom $s-2
  text-align center

.top
  display flex
  flex-direction column
  overflow scroll
  flex 1 0 0
  width 100%
  
.bottom
  flex 0 0 60px
  width 100%
  display flex
  align-items center
  justify-content space-between
  margin-top $s0
