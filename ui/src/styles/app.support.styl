// --------------------------------------------
// Theme Colors

$c-primary = #b3f287

// --------------------------------------------
// Typography & Spacing

$s1 = 0.50rem
$s2 = 1.50rem
$s3 = 2.00rem

text(size)
  if size is 'sm'
    font-size 0.875rem
    line-height 1.25rem

  if size is 'md'
    font-size 1rem
    line-height 1.5rem

  if size is 'lg'
    font-size 1.5rem
    line-height 2.15rem

  if size is 'xl'
    font-size 1.875rem
    line-height 2.25rem

  if size is '2xl'
    font-size 2.5rem
    line-height 2rem

// --------------------------------------------
// Utilities

at(threshold)
  @media screen and (min-width: threshold)
    { block }
